
<div class="container">
    <form asp-controller="Customers" asp-action="Index">
        <input type="hidden" />
        <div class="container">
            <div class="row row-cols-sm-1 align-items-start">
                <div class="d-flex flex-row justify-content-between gap-4">
                    <!-- Search -->
                    <div class="col-md-5 mb-4 ml-0 mr-10" style="margin-left: -25px">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search product..." name="searchString" value="@ViewBag.SearchString">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="d-flex flex-row col-md-7 mb-4 justify-content-end" style="gap: 15px; margin-left: 22px">
                        <a class="btn btn-outline-info" asp-action="download">
                            <i class="fa-solid fa-download"></i> Download
                        </a>
                        <a class="btn btn-outline-info" asp-action="upload">
                            <i class="fa-solid fa-upload"></i> Upload
                        </a>
                        <a class="btn btn-success" asp-action="create">
                            <i class="fa fa-plus"></i> Create
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @* data grid *@
    <div class="row">
        <div class="col-12">
            <ejs-grid id="customers-list"
                      dataSource="@ViewBag.Customers"
                      gridLines="Vertical">
                <e-grid-columns>
                    <e-grid-column headerText="Id" field="Id" template="#template" typeof="text"></e-grid-column>
                    <e-grid-column headerText="FullName" field="FullName" typeof="text"></e-grid-column>
                    <e-grid-column headerText="Phonenumber" field="PhoneNumber" typeof="text"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>

    @* pagineted *@
    <div class="d-flex justify-content-between">
        <div class="p-2">
            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-left" href="@Url.Action("Index", new { pageNumber = 1})">&lt;&lt;</a>
            }

            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1})">@(@ViewBag.CurrentPage - 1)</a>
            }

            <button type="button" class="btn btn-primary btn-lg rounded-0" disabled>@ViewBag.CurrentPage</button>

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1})">@(@ViewBag.CurrentPage + 1)</a>
            }

            @if (ViewBag.CurrentPage < ViewBag.PageCount - 1)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 2})">@(@ViewBag.CurrentPage + 2)</a>
            }

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })">&gt;&gt;</a>
            }
        </div>
        <div class="p-2">
            <p class="h6">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
        </div>

    </div>
</div>
<script id="template" type="text/x-template">
    <div>
        <a rel='nofollow' href="customers/Details/${Id}">${Id}</a>
    </div>
</script>



