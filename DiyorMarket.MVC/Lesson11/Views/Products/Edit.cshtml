@model Lesson11.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DataGridLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/animation.css" />
</head>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard/index"><i class="fa fa-home" style="color: white"></i></a></li>
        <li class="breadcrumb-item"><a href="/Products/index">Products List</a></li>
        <li class="breadcrumb-item"><a href="/Products/details/@Model.Id">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<body>
    <hr class="align-items-baseline" style="margin-top: 100px" />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SalePrice" class="control-label"></label>
                    <input asp-for="SalePrice" class="form-control" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplyPrice" class="control-label"></label>
                    <input asp-for="SupplyPrice" class="form-control" />
                    <span asp-validation-for="SupplyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpireDate" class="control-label"></label>
                    <input asp-for="ExpireDate" class="form-control" />
                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label mt-2"></label>
                    <select class="form-control" name="categoryId">
                        <option value="" selected disabled>@Model.Category.Name</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(category.Id == ViewBag.categoryId)">
                                @category.Name
                            </option>
                        }
                    </select>
                </div>
                <!-- Buttons -->
                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-outline-info">
                        <i class="fa-solid fa-arrow-left-long"></i>
                        Back
                    </a>
                    <button class="btn btn-outline-success">
                        <i class="fa fa-pencil"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
