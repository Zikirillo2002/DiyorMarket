@model Lesson11.Models.Supply

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DataGridLayout.cshtml";
}
<!-- Navigation link -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard/index"><i class="fa fa-home" style="color: white"></i></a></li>
        <li class="breadcrumb-item"><a href="/Supplies/index">Supplies List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<hr class="align-items-baseline" style="margin-top: 100px" />

<div style="margin-top: 30px">
    <h4>Supply</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplyDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplyDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.FirstName)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-info">
        <i class="fa-solid fa-arrow-left"></i>
        Back
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">
        <i class="fa-solid fa-pen"></i>
        Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">
        <i class="fa-solid fa-trash"></i>
        Delete
    </a>
</div>
