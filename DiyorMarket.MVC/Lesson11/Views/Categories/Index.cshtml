<head>
    <link rel="stylesheet" href="~/css/animation.css" />
</head>
<div class="container mt-4">

    <form asp-controller="Categories" asp-action="Index" class="mb-4">

        <div class="row align-items-center">
            @* search *@
            <div class="d-flex justify-content-between align-items-end">
                <!-- Search input -->
                <div class="col-md-6 mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search products..."
                               name="searchString" value="@ViewBag.SearchString">
                    </div>
                </div>

                <!-- Filter button -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-create btn-back">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        <i class="fa fa-search"></i> Filter
                    </button>
                </div>
            </div>

            @* create *@
            <div class="col-md-2 text-right">
                <a asp-action="Create" class="btn btn-create position-fixed" style="top: 80px; right: 20px;">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Create
                </a>
            </div>

        </div>
    </form>

    @* data grid *@
    <div class="row">
        <div class="col-12">
            <ejs-grid id="categories-list"
                      dataSource="@ViewBag.Categories"
                      gridLines="Vertical"
                      allowSorting="true">
                <e-grid-columns>
                    <e-grid-column headerText="Id" field="Id" template="#template" typeof="Text"></e-grid-column>
                    <e-grid-column headerText="Category Name" field="Name" typeof="text"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>

    @* pagineted *@
    <div class="d-flex justify-content-between">
        <div class="p-2">
            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-left" href="@Url.Action("Index", new { pageNumber = 1})">&lt;&lt;</a>
            }

            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1})">&lt;</a>
            }

            <button type="button" class="btn btn-primary btn-lg rounded-0" disabled>@ViewBag.CurrentPage</button>

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1})">&gt;</a>
            }

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })">&gt;&gt;</a>
            }
        </div>
        <div class="p-2">
            <p class="h6">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
        </div>
    </div>

    <script id="template" type="text/x-template">
        <div>
            <a rel='nofollow' href="categories/Details/${Id}">${Id}</a>
        </div>
    </script>

</div>



